@model VmMessage
@{
    ViewData["Title"] = "Chat";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="mb-5">Send message to @Model.User.UserName</h1>
        </div>
        <hr />
        <div class="col-lg-12">
            <div class="messageContainer mb-3">
                @foreach (var item in Model.Messages)
                {
                    <p class="@(item.SenderId==Model.SenderId?"sender":"reciever")">@item.Text</p>
                }
                @*<p class="sender">Salam</p>*@
                @*<p class="reciever">Alekum salam</p>*@
                @*<p class="typing">Typing...</p>*@
            </div>
        </div>

        <div class="col-lg-12">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="messengerInput" placeholder="Type message...">
                <input hidden id="recieverId" value="@Model.User.Id">
                <button class="btn btn-outline-secondary" type="button" id="messengerButton">Send</button>
            </div>
        </div>
    </div>
</div>